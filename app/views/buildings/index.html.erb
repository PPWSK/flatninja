<div id="container">
  <div id="row">
    <div id="col-sm-8 col-offset-2">
      <h1>
        Welcome
        <% if account_signed_in? && current_account.user.present? && current_account.user.valid? %>
          <%= current_account.user.first_name %>
        <% end %>
      </h1>
    </div>
  </div>
  <div id="row">
    <div class="col-sm-12">
      <div class="row">
        <%= render partial: 'rooms/show', locals: { local_room: @rooms.sample, local_user: @user } %>
      </div>
    </div>
  </div>
</div>
