<div class="container-fluid">

  <div class="aside slideMenuLeft">
    <ul>
      <li>aaaa</li>
      <li>aaaa</li>
      <li>aaaa</li>
      <li>aaaa</li>
      <li>aaaa</li>
      <li>aaaa</li>
    </ul>
  </div>



  <div class="row">
    <div class="col-sm-10 col-offset-2">

      <h1>
        Welcome
        <% if account_signed_in? && current_account.user.present? && current_account.user.valid? %>
          <%= current_account.user.first_name %>
        <% else %>
          , please sign up to like rooms!
        <% end %>
      </h1>

    </div>
  </div>
  <div class="row">
    <div class="col-sm-8">

      <% if @all_rooms.size <= 0 %>
        <br>no rooms yet... wait for new offers!
      <% elsif @new_rooms.size <= 0 %>
        <br>No more new rooms!
        <%= link_to "Reset?", destroy_evals_user_path(current_account.user) %>

      <% else %>
        <br><%= @new_rooms.size.to_s %> new rooms:
        <% if !@new_room.nil? %>
          <div class="row">
          <%= render partial: 'rooms/show', locals: { local_room: @new_room, local_user: @user } %>
          </div>
        <% else %>
          something wrong with the room...
        <% end %>
      <% end %>

    </div>
    <div class="col-sm-3 col-sm-offset-1">

      <br><%= @liked_rooms.size.to_s %> liked rooms:
      <% if @liked_rooms.size > 0 %>
        <% @liked_rooms.each do |lr| %>
          <% if !lr.nil? %>
          <div class="row">
            <%= render partial: 'rooms/small_show', locals: { local_room: lr, local_user: @user } %>
          </div>
          <% end %>
        <% end %>
      <% end %>

       <div id='toggleAside'>Toggle</div>

    </div>
  </div>
</div>

<!-- JQUERY SECTION -->

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(
    function(){
        $("#toggleAside").click(function(){
         $(".aside").toggleClass("slideMenuLeft");
        })
    });
  <% end %>
<% end %>
