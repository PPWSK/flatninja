<div id="container">
  <div id="row">
    <div id="col-sm-8 col-offset-2">
      <h1>
        Welcome
        <% if account_signed_in? && current_account.user.present? && current_account.user.valid? %>
          <%= current_account.user.first_name %>
        <% else %>
          , please sign up to like rooms!
        <% end %>
      </h1>
    </div>
  </div>
  <div id="row">
    <div class="col-sm-12">
      <div class="row">
        <% room = @rooms.sample %>
        <% if !room.nil? %>
          <%= render partial: 'rooms/show', locals: { local_room: room, local_user: @user } %>
        <% else %>
          No rooms yet!
        <% end %>
      </div>
    </div>
  </div>
</div>
