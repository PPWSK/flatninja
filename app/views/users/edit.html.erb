<div>
  <h1 class="text-center">Edit user account:</h1>
  <div class="container">

    <!-- PICTURES SECTION -->
      <!-- LIST PICTURES + DELETE -->

    <div class="row">
        <% @user.user_pictures.each do |upic| %>
          <div class="col-sm-offset-4 col-sm-2 col-lg-2">
          <%= image_tag upic.file.url(:thumb) %>

            <%= simple_form_for([@user, upic], method: :delete) do |f| %>
              <%= f.button :submit, :value => "delete" %>
            <% end %>
          </div>
        <% end %>
    </div>

      <!-- ADD NEW PICTURE -->

    <div class="row">
      <div class="col-sm-offset-4 col-sm-4">
        <%= render partial: 'user_pictures/new', locals: { user: @user } %>
      </div>
    </div>

    <!-- DETAILS SECTION -->

    <div class="row">
      <div class="col-sm-offset-4 col-sm-4">
        <%= simple_form_for(@user, html: { class: 'form-horizontal' }) do |f| %>

          <%= f.input :first_name, label: "first name" %>
          <%= f.input :last_name, label: 'last name' %>
          <%= f.input :birth_date, label: 'birthdate' %>
          <%= f.input :gender, collection: ["female", "male"], label: 'gender' %>
          <%= f.input :phone_number, label: 'phone number' %>
          <%= f.submit "submit" %>

        <% end %>
      </div>
    </div>
  </div>
</div>
