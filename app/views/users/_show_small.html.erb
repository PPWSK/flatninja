<% if local_assigns.has_key? :mre %>
  <% eval = mre %>
<% end %>

<div class="card">

  <!-- USER PROFILE SECTION -->

  <div class="card-content">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <% if eval.user.user_pictures.first.present? %>
          <%= image_tag eval.user.user_pictures.first.file.url(:thumb), class: "img-avatar3" %>
        <% end %>
        <b>&nbsp;&nbsp;<%= eval.user.first_name %> likes your room!</b>
        <span class="valid-span">
            <!-- negative evaluation -->
            <%= link_to ("<i class='fa fa-times fa-2x' style='color: black;'></i>").html_safe,   user_evaluation_path(current_account.user, eval, owner_eval: false), method: :post %>

            &nbsp;&nbsp;&nbsp;

            <!-- positive evaluation -->
            <%= link_to ("<i class='fa fa-heart fa-2x' style='color: red;'></i>").html_safe,  user_evaluation_path(current_account.user, eval, owner_eval: true), method: :post %>
        </span>
      </div>
    </div>
  </div>
</div>
